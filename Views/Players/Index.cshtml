@model IEnumerable<DemoCrudMvc.Entities.Player>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Player</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerJoiningDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerJoiningDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerID" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerID" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
